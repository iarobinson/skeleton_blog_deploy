<!DOCTYPE html>
<html>
  <head>
    <title>Skeleton Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="container">
	    <nav class="navbar">
	      <div class="container">
	        <div class="navbar-list">
            <div class="navbar-menu">
              <li class='navbar-item'>
    	          <%= link_to 'Demo Blog', root_path, class: "navbar-link" %>
              </li>
  	        </div>
  	        <div class="navbar-menu">
              <li class='navbar-item'>
                <%= link_to "Create New Post", new_post_path, class:"navbar-link" %>
              </li>
  	        </div>
          </div>
	      </div>
	    </nav>

	  <!-- Hero content: will be in the middle -->
	  <div class="hero-body">
	    <div class="container has-text-centered">
	      <h1 class="title">
	        <%= yield :page_title %>
	      </h1>
	    </div>
	  </div>
	</section>
    <%= yield %>
  </body>
</html>